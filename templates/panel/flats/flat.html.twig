{% extends '/panel/page.html.twig' %}

{% block content %}
    <div class="m-4">
        <div class="row">
            <h1>Your flat</h1>
            <div class="card col-md-8 m-3 p-0 border-0">
                {% if flat.pictures %}
                <div id="flatPicturesSlider" class="carousel slide" data-bs-interval="false">
                    <div class="carousel-inner">
                        {% for picture in flat.pictures %}
                            <a class="lightbox-toggle carousel-item {{ (loop.index == 1) ? 'active' : '' }}" href="/uploads/flats/pictures/user{{ flat.landlord.id }}/{{ picture }}" data-toggle="lightbox" data-gallery="flat-gallery">
                                <img class="card-img-top d-block w-100" src="/uploads/flats/pictures/user{{ flat.landlord.id }}/{{ picture }}" alt="{{ flat.address }}">
                            </a>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#flatPicturesSlider" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#flatPicturesSlider" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title text-secondary">{{ flat.address }}</h5>
                    <p class="card-text">
                    <div class="row">
                        <div class="">
                            <table class="table table-striped table-flat-info">
                                <tbody>
                                <tr>
                                    <td><strong>Area</strong></td>
                                    <td>{{ flat.area }} m<sup>2</sup></td>
                                    <td></td>
                                    <td></td>
                                    <td><strong>Number of rooms</strong></td>
                                    <td>{{ flat.numberOfRooms }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Rent</strong></td>
                                    <td>{{ flat.rent }} zł</td>
                                    <td></td>
                                    <td></td>
                                    <td><strong>Deposit</strong></td>
                                    <td>{{ flat.deposit }} zł</td>
                                </tr>
                                <tr>
                                    <td><strong>Floor</strong></td>
                                    <td>{{ flat.floor }} / {{ flat.maxFloor }}</td>
                                    <td></td>
                                    <td></td>
                                    {% if flat.rentAgreement %}
                                    <td><strong>Agreement</strong></td>
                                    <td>
                                        <a href="/uploads/flats/agreements/user{{ flat.landlord.id }}/{{ flat.rentAgreement }}" download>
                                            {{ flat.rentAgreement|length > 10 ? flat.rentAgreement|slice(0, 10) ~ '...': flat.rentAgreement }} <i class="fa-solid fa-download"></i>
                                        </a>
                                    </td>
                                    {% endif %}
                                </tr>
                                </tbody>
                            </table>
                            {% if flat.fees %}
                                <h5 class="text-secondary">Fees</h5>
                                <table class="table table-fees">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for fee in flat.fees %}
                                        <tr>
                                            <th scope="row">{{ loop.index }}</th>
                                            <td>{{ fee.name }}</td>
                                            <td>{{ fee.value }} zł</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            {% endif %}
                            {% if flat.furnishing or flat.additionalFurnishing %}
                            <h5 class="text-secondary">Furnishing</h5>
                            <table class="table table-furnishing">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Furnishing</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set counter = 0 %}
                                {% for furnishing in flat.furnishing[0] %}
                                    {% set counter = loop.index %}
                                    <tr>
                                        <th scope="row">{{ counter }}</th>
                                        <td>{{ furnishing | capitalize }}</td>
                                    </tr>
                                {% endfor %}
                                {% if flat.additionalFurnishing %}
                                <tr>
                                    <th scope="row">{{ counter + 1 }}</th>
                                    <td>{{ flat.additionalFurnishing }}</td>
                                </tr>
                                {% endif %}
                                </tbody>
                            </table>
                            {% endif %}
                        </div>
                    </div>
                    {% if flat.description %}
                        <h5 class="text-secondary">Description</h5>
                    <div class="flat-description">
                        {{ flat.description | raw }}
                    </div>
                    {% endif %}
                    {% if flat.picturesForTenant %}
                    <h5 class="text-secondary">Pictures taken with tenant</h5>
                    <!-- Gallery -->
                    <div class="row pictures-for-tenant">
                        {% for picture in flat.picturesForTenant %}
                        <a class="col-lg-4 col-md-12 mb-4 mb-lg-0 lightbox-toggle" href="/uploads/flats/pictures_for_tenant/user{{ flat.landlord.id }}/{{ picture }}" data-toggle="lightbox" data-gallery="tenant-pictures-gallery">
                            <img
                                    src="/uploads/flats/pictures_for_tenant/user{{ flat.landlord.id }}/{{ picture }}"
                                    class="w-100 shadow-1-strong rounded mb-4"
                                    alt="{{ flat.address }}"
                            />
                        </a>
                        {% endfor %}
                    </div>
                    {% endif %}
                    <!-- Gallery -->
                    {% if app.user.roles[0] == 'ROLE_LANDLORD' %}
                    <div class="row my-4">
                        <div class="col-sm-6">
                            <a href="{{ path('app_flats_edit', {id: flat.id}) }}" class="btn btn-primary">Edit</a>
                            <a href="{{ path('app_flats_delete', {id: flat.id}) }}" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                    <div class="row my-4">
                        <div class="col-sm-6">
                            <a href="{{ path('app_flats_generate_invitation_code', {id: flat.id}) }}" class="btn btn-warning">Generate invitation code</a>
                            <a href="{{ path('app_flats_utility_meters', {id: flat.id}) }}" class="btn btn-primary">Check state of utility meters</a>
                        </div>
                    </div>
                    {% elseif app.user.roles[0] == 'ROLE_TENANT' %}
                        {{ form_start(additional_photos_form) }}
                        <div class="row my-4">
                            <div class="col-sm-6">
                                {{ form_label(additional_photos_form.picturesForTenant) }}<br>
                                <small>Here you can add additional photos of flat. Remember that you won't be able to delete them; only landlord has those permissions</small>
                            </div>
                            <div class="col-sm-6">
                                {{ form_widget(additional_photos_form.picturesForTenant) }}
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-4">Submit photos</button>
                        {{ form_end(additional_photos_form) }}
                        <hr>
                        <a href="{{ path('app_flats_utility_meters', {id: flat.id}) }}" class="btn btn-primary">Check state of utility meters</a>
                        <a href="{{ path('app_flats_remove_tenant', {flatId: flat.id, tenantId: app.user.Id}) }}" class="btn btn-danger">Remove me from this apartment</a>
                    {% endif %}
                </div>
            </div>
            {% if app.user.roles[0] == 'ROLE_LANDLORD' %}
                <div class="card col-md-3 m-3 p-3 border-0">
                    <h2 class="text-black text-center">Tenants</h2>
                    {% if invitation_code.code %}
                        <div class="{{ invitation_code.is_code_valid ? 'text-success' : 'text-danger' }}">
                            <p>Invitation code:<br> <strong id="invitation-code">{{ invitation_code.code }}</strong> <a href="{{ path('app_flats_delete_invitation_code', {id: flat.id}) }}" class="mx-2 text-danger remove-invitation-code"><i class="fas fa-trash-alt"></i></a> <br>
                            <small>
                                <i>You can share this code with tenant whom you want to invite</i>
                            </small>
                            </p>
                            <p>
                                <small id="expiration-date">
                                    Valid until: {{ invitation_code.expiration_date }}<br>
                                </small>
                            </p>
                        </div>

                    {% endif %}
                    {% if tenants is empty %}
                        There are no tenants associated with this flat
                    {% else %}
                        Tenants: <br>
                        {% for tenant in tenants %}
                            <div class="row border py-2 m-1">
                                <div class="col-sm-3">
                                    <img src="/uploads/profile_pictures/{{ tenant.image }}" style="clip-path: circle();" class="rounded-circle img-fluid" />
                                </div>
                                <div class="col-sm-9">
                                    {{ tenant.name }}
                                    <a class="mx-1" href="{{ path('app_profile', {id: tenant.id}) }}" title="Go to the tenant profile"><i class="fa-solid fa-user"></i></a>
                                    <a href="{{ path('app_flats_remove_tenant', {flatId: flat.id, tenantId: tenant.id}) }}" class="mx-1 text-danger remove-tenant-from-flat" title="Remove user from this flat"><i class="fas fa-trash-alt"></i></a><br>
                                    <small>Tenant since: {{ tenant.tenantSince | date("d-m-Y") }}</small>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            {% elseif app.user.roles[0] == 'ROLE_TENANT' %}
                <div class="card col-md-3 m-3 p-3 border-0">
                    <h2 class="text-black text-center">Landlord</h2>
                        <div class="row border py-2 m-1">
                            <div class="col-sm-3">
                                <img src="/uploads/profile_pictures/{{ flat.landlord.image }}" style="clip-path: circle();" class="rounded-circle img-fluid" />
                            </div>
                            <div class="col-sm-9">
                                {{ flat.landlord.name }}
                                <a class="mx-1" href="{{ path('app_profile', {id: flat.landlord.id}) }}" title="Go to the landlord profile"><i class="fa-solid fa-user"></i></a>
                            </div>
                        </div>
                    <br>
                    <small>You are tenant since: {{ app.user.tenantSince | date("d-m-Y") }}</small>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}