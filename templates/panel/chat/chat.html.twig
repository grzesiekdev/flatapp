{% extends '/panel/page.html.twig' %}

{% block content %}

<div class="container-fluid px-4">
    <div class="row my-3">
        <div class="col-xl-3 mb-4 contact-list">
            <div class="card">
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        {% for user in related %}
                        <li class="p-2 border-bottom">
                            <a href="#!" class="d-flex justify-content-between" id="{{ user.id }}" data-receiver-name="{{ user.name }}">
                                <div class="d-flex flex-row">
                                    <img src="/uploads/profile_pictures/{{ user.image }}" alt="avatar"
                                         class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60" height="60">
                                    <div class="pt-1">
                                        <p class="fw-bold mb-0">{{ user.name }}</p>
                                        <p class="small text-muted last-message"></p>
                                    </div>
                                </div>
                                <div class="pt-1">
                                    <p class="small text-muted mb-1 last-message-time"></p>
                                    <span class="badge bg-danger float-end new-messages-counter"></span>
                                </div>
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class=" col-xl-8 chat-window" data-receiver-id="{{ related|first ? related[0].id : ''}}" data-sender-id="{{ app.user.id }}" data-sender-name="{{ app.user.name }}" data-receiver-name="{{ related|first ? related[0].name : ''}}">
            <ul class="list-unstyled message-container">
            </ul>
            <ul class="list-unstyled">
                <li class="mb-3">
                    <div class="form-outline">
                        <textarea placeholder="Message" class="form-control w-100" id="chat-input-box" rows="4"></textarea>
                    </div>
                    <button type="button" class="btn btn-success btn-rounded float-end m-1 send-message">Send</button>
                </li>
            </ul>
        </div>
    </div>
</div>

{% endblock %}