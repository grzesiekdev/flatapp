<!-- Sidebar Start -->
<div class="sidebar pe-4 pb-3">
    <nav class="navbar bg-secondary navbar-dark">
        <a href="/" class="navbar-brand mx-4 mb-3">
{#            <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>flatApp</h3>#}
            <img src="/img/logo.png" class="img-fluid" alt="logo flatApp" />
        </a>
        <div class="d-flex align-items-center ms-4 mb-4">
            <div class="position-relative">
                <img class="rounded-circle" src="/uploads/profile_pictures/{{ app.user.image }}" alt="" style="width: 40px; height: 40px;">
                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
            </div>
            <div class="ms-3">
                <h6 class="mb-0">{{ app.user.name }}</h6>
                {% if app.user.roles[0] == 'ROLE_LANDLORD' %}
                    <span>Landlord</span>
                {% elseif app.user.roles[0] == 'ROLE_TENANT' %}
                    <span>Tenant</span>
                {% else %}
                    <span>User</span>
                {% endif %}
            </div>
        </div>
        <div class="navbar-nav w-100">
            <a href="{{ path('app_panel') }}" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
            {% if app.user.roles[0] == 'ROLE_LANDLORD' %}
                <a href="{{ path('app_flats') }}" class="nav-link"><i class="fas fa-home-alt"></i> Flats</a>
            {% else %}
                {% if app.user.getFlatId.id is defined %}
                    <a href="{{ path('app_flats_view', {id: app.user.getFlatId.id}) }}" class="nav-link"><i class="fas fa-home-alt"></i> My flat</a>
                {% endif %}
            {% endif %}
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Pages</a>
                <div class="dropdown-menu bg-transparent border-0">
                    <a href="signin.html" class="dropdown-item">Sign In</a>
                    <a href="signup.html" class="dropdown-item">Sign Up</a>
                    <a href="404.html" class="dropdown-item">404 Error</a>
                    <a href="blank.html" class="dropdown-item">Blank Page</a>
                </div>
            </div>
        </div>
    </nav>
</div>
<!-- Sidebar End -->